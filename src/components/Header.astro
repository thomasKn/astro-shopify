---
import Logo from "./Logo.astro";
import CartIcon from "./CartIcon.svelte";
---

<header class="sticky top-0 z-40">
  <div class="py-3 border-b backdrop-blur-2xl bg-white/70">
    <nav class="grid grid-cols-3 items-center container">
      <a href="/">
        <span class="sr-only">Logo</span>
        <Logo />
      </a>
      <h1
        class="flex justify-center font-semibold text-gray-900 text-sm sm:text-xl"
      >
        Astro 🧑‍🚀 Shopify
      </h1>
      <div class="justify-self-end">
        <CartIcon client:load />
      </div>
    </nav>
  </div>
</header>
